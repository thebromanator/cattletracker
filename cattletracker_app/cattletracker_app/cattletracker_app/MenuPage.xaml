<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:cattletracker_app;assembly=cattletracker_app"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cattletracker_app.MenuPage">

  <MasterDetailPage.Master>
    <ContentPage Title="Menu">
      <StackLayout BackgroundColor="Aqua">
        <Button Text="Home"
                Clicked="HomeBtn_OnClicked"/>
        <Button Text="My Herd"
                Clicked="MyHerdBtn_OnClicked"/>
        <Button Text="Management"
                Clicked="ManagementBtn_OnClicked"/>
        <Button Text="Health"
                Clicked="HealthBtn_OnClicked"/>
        <Button Text="Sales"
                Clicked="SalesBtn_OnClicked"/>
      </StackLayout>
    </ContentPage>
  </MasterDetailPage.Master>

  <MasterDetailPage.Detail>
    <local:HomePage/>
  </MasterDetailPage.Detail>

</MasterDetailPage>